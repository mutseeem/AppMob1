<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.AppMob1" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AppMob1" parent="Base.Theme.AppMob1" />

    <!-- Teacher Theme -->
    <style name="Theme.AppMob1.Teacher" parent="Base.Theme.AppMob1">
        <item name="colorPrimary">@color/teacher_primary</item>
        <item name="colorPrimaryDark">@color/teacher_primary_dark</item>
        <item name="colorSecondary">@color/teacher_secondary</item>
        <item name="android:windowBackground">@color/teacher_background</item>
        <item name="android:textColorPrimary">@color/teacher_text</item>
    </style>

    <!-- Student Theme -->
    <style name="Theme.AppMob1.Student" parent="Base.Theme.AppMob1">
        <item name="colorPrimary">@color/student_primary</item>
        <item name="colorSecondary">@color/student_secondary</item>
        <item name="android:windowBackground">@color/student_background</item>
        <item name="android:textColorPrimary">@color/student_text</item>
    </style>
</resources>